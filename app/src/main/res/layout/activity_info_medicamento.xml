<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/informa_o_do_medicamento"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonHistorico"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:text="Histórico"
            android:layout_gravity="center"
            android:textSize="11dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Nome:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Dosagem:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoDosagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Forma Farmacêutica:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoFormaFarmaceutica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Posologia:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoPosologia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Horário:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Quantidade:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoQuantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Duração:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoDuracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16dp"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Data de Início:"
                android:textSize="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/infoDataInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp" >

            <Button
                android:id="@+id/buttonVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/buttonEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
